<Widget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
    color: 0, 0.2, 1, 1

<Button>:
    canvas.after:
        Color:
            rgba: 0, 0, 0, 1


BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        id: display_field
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.25
        Button:
            text: "Add a name"
            on_press: app.display_widget()
        Button:
            text: "Clear names"
            on_press: app.clear_names()
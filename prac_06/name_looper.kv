BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        id: display_field
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.25
        Button:
            text: "Add a name"
            on_press: app.display_widget()
        Button:
            text: "Clear names"
            on_press: app.clear_names()